{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Server (nodemon)",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/server/app.js",
            "cwd": "${workspaceFolder}/server",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Client (chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3080",
            "webRoot": "${workspaceRoot}/src"
        }
    ]
}
